<% layout("/layouts/boilerplates") %>
    <br><br>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
         <!-- this is for receiving file type data enctype="multipart/form-data -->
    <form method="POST" action="/listings" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-title">Title</label>
            <input id="title" name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-description">Description</label>
            <textarea id="description" name="listing[description]"  class="form-control" required></textarea>
          </div>

          <div class="mb-3">
            <label for="image" class="form-image">Upload Image</label>
            <input id="image" name="listing[image]"  type="file"  class="form-control " required>
          </div>
          
          <div class="mb-3">
            <label for="price" class="form-price">Price</label>
            <input id="price" name="listing[price]" placeholder="Enter price" type="number"  class="form-control" required>
          </div>
          
          <div class="mb-3">
            <label for="location" class="form-location">Location</label>
            <input id="location" name="listing[location]" placeholder="Enter location" type="text"  class="form-control" required>
          </div>
          
          <div class="mb-3">
            <label for="country" class="form-country">Country</label>
            <input id="country" name="listing[country]" placeholder="Enter country" type="text"  class="form-control" required>
          </div>
          
          
            <button class="btn btn-dark">ADD</button>
        <br><br><br>
          
    </form>
</div>
</body>
</html>
</div>